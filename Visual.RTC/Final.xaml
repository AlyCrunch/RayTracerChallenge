<Window x:Class="Visual.RTC.Final"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual.RTC"
        mc:Ignorable="d"
        Title="Final" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Folder" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Click="SelectFolder_Click" Margin="0,0,10,0"/>
        <TextBox x:Name="FolderPath" Grid.Column="1" Grid.ColumnSpan="5"
                 VerticalAlignment="Bottom"
                 Text="D:\Users\aliso\Desktop\test_RT"/>
        <Button x:Name="Generate"
                Grid.Row="1" Grid.ColumnSpan="2"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Content="Generate cover pic"
                Click="Generate_Click"/>
    </Grid>
</Window>
